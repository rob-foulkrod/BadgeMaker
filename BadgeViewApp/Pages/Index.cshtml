@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2>Message: <code>@Model.Configuration.Message</code></h2>
    @foreach (var badgeId in Model.Badges) 
    {
        <p>Badge: @badgeId</p>
        <img src="Badge/@badgeId"/>
        <br />
    }

</div>
